<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h4 class="card-title text-center">Forgot password?</h4>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), class:"form-signin", html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class: "form-control" %>
                <%= f.label :email %>
              </div>

              <%= f.submit "Reset password", class: 'btn btn-primary' %>

            <% end %>
            <hr class="my-4">
            <div style="margin-left:10px; margin-top:20px"><%= render "devise/shared/links" %></div>

        </div>
      </div>
    </div>
  </div>
</div>