<div class="container">
  <div class="row">
    <div class="col-sm-11 col-md-9 col-lg-7 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <div class="row-12">
              <%= link_to "", todos_path, {class: "fa fa-arrow-left", style:"margin-top:10px;position:absolute;"} %>
              <h4 class="card-title text-center"><%= @todo.item %></h4>
              <%= @todo.done ? (link_to "", done_todo_path(@todo), remote: true, method: :patch, data: {confirm: 'Mark as not done?'}, class: "fa fa-check-square fa-2x")
                             : (link_to "", done_todo_path(@todo), remote: true, method: :patch, data: {confirm: 'Mark as done?'}, class: "fa fa-square-o fa-2x") %>
          </div>
          <div>
            <%= @todo.details %>
          </div>

          <div>
            <small>
              Tags: 
              <% @todo.tags.each do |tag| %>
                <%= link_to tag.name, tag_path(tag) %>
              <% end %>
            </small>
          </div>
          <hr class="my-4">
          <div class="form-group">
            <%= link_to  "Delete", todo_path(@todo), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-secondary", style:"margin-left:0px" %>
            <%= link_to  "Edit", edit_todo_path(@todo), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>