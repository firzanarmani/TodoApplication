<script type="text/javascript">
$(document).on('ajax:success'), function() {
  $('#.chosen-select').trigger("chosen:updated");
}
</script>

<%= form_with(model: @tag, local: true) do |formTag| %>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Add new tag</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
        <%= formTag.label "Tag name", class: "control-label"%>
        <%= formTag.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= formTag.submit 'Add', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>